# Count words script.
LANGUAGE=python
COUNT_SRC=countwords.py
COUNT_EXE=$(LANGUAGE) $(COUNT_SRC)

#Plot counts script.
PLOT_DAT=plotcounts.py
PLOT_EXE=$(LANGUAGE) $(PLOT_DAT)

# Test Zipf's rule
ZIPF_SRC=testzipf.py
ZIPF_EXE=$(LANGUAGE) $(ZIPF_SRC)
RESULTS?=resultados.txt

#Type Files
TXT_FILES=$(wildcard books/*.txt)
DAT_FILES=$(patsubst books/%.txt, dats/%.dat, $(TXT_FILES))
PNG_FILES=$(patsubst books/%.txt, figs/%.png, $(TXT_FILES))



# Generate summary table.
.PHONY : results
results : $(RESULTS)

$(RESULTS) : $(ZIPF_SRC) $(DAT_FILES)
	$(ZIPF_EXE) $(DAT_FILES) > $@

# Count words.
.PHONY : dats
dats : $(DAT_FILES)

dats/%.dat : books/%.txt $(COUNT_SRC)
	$(COUNT_EXE) $< $@

.PHONY : figs
figs : $(PNG_FILES)

figs/%.png : dats/%.dat $(PLOT_DAT)
	$(PLOT_EXE) $< $@


.PHONY : clean
clean :
	rm -f $(DAT_FILES)
	rm -f results.txt
	rm -f $(PNG_FILES)

.PHONY : variables
variables:
	@echo TXT_FILES: $(TXT_FILES)
	@echo DAT_FILES: $(DAT_FILES)
	@echo PNG_FILES: $(PNG_FILES)

.PHONY : help
help :
	@echo "results : Generate Test ZipfÂ´result table."
	@echo "dats : Dat files from text files."
	@echo "figs : Png files from dat files."
	@echo "clean : Remove autogenerated files."
	@echo "variables : show names files. "
